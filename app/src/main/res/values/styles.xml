<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="TitleTextView">
        <item name="android:gravity">left</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:textColor">@color/colorTitle</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="DescriptionTextView">
        <item name="android:gravity">left</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:maxLines">2</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="UserNameTextView">
        <item name="android:gravity">left</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/colorTitle</item>
    </style>

    <style name="CountTextView">
        <item name="android:drawablePadding">4dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorOrange</item>
        <item name="android:drawableTint">@color/colorOrange</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="EditTextSearchStyleDisable">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">12dp</item>
        <item name="android:background">@drawable/bg_search_edit_text</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">false</item>
        <item name="android:hint">@string/search</item>
        <item name="android:inputType">text</item>
    </style>


    <style name="EditTextSearchViewEnable" parent="EditTextSearchStyleDisable">
        <item name="android:layout_height">match_parent</item>
        <item name="android:focusable">true</item>
        <item name="android:elevation">4dp</item>

    </style>


</resources>
