<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <TextView
            android:id="@+id/tv_customer_address_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/customer_address_title"
            android:textColor="@color/customerFieldsTitle"
            android:textSize="@dimen/size_text_game_title"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="64dp"
            android:layout_marginStart="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/tv_customer_edit_address"/>

    <TextView
            android:id="@+id/tv_customer_edit_address"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/edit_label"
            android:textColor="@color/colorAccent"
            android:textStyle="bold"
            android:textSize="@dimen/size_text_game_title"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
            android:id="@+id/tv_customer_cep"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/customer_address"
            android:textColor="@color/customerFields"
            android:textSize="@dimen/size_text_game_title"
            android:layout_marginTop="8dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_customer_address_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    <View
            android:id="@+id/view_customer_address_line"
            style="@style/Separator"
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_customer_cep"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

    <TextView
            android:id="@+id/tv_customer_freight_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/freight_label"
            android:textColor="@color/customerFieldsTitle"
            android:textSize="@dimen/size_text_game_title"
            android:layout_marginTop="8dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="200dp"
            app:layout_constraintTop_toBottomOf="@+id/view_customer_address_line"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
            android:id="@+id/tv_customer_post_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/post_offices"
            android:textColor="@color/customerFields"
            android:textSize="@dimen/size_text_game_title"
            android:layout_marginTop="8dp"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_customer_freight_title"
            app:layout_constraintStart_toStartOf="parent"/>

    <TextView
            android:id="@+id/tv_customer_freight_price"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            tools:text="R$ 10,00"
            android:textStyle="bold"
            android:textColor="@color/customerFields"
            android:textSize="@dimen/size_text_game_title"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="64dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_customer_freight_title"
            app:layout_constraintStart_toEndOf="@+id/tv_customer_post_title"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="4dp"/>

    <View
            android:id="@+id/view_customer_freight_line"
            style="@style/Separator"
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:layout_marginTop="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_customer_post_title"/>

    <TextView
            android:id="@+id/tv_customer_payment_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/payment_title"
            android:textColor="@color/customerFieldsTitle"
            android:textSize="@dimen/size_text_game_title"
            android:layout_marginTop="8dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="64dp"
            app:layout_constraintTop_toBottomOf="@+id/view_customer_freight_line"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/tv_customer_edit_payment"/>

    <TextView
            android:id="@+id/tv_customer_edit_payment"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/edit_label"
            android:textColor="@color/colorAccent"
            android:textStyle="bold"
            android:textSize="@dimen/size_text_game_title"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view_customer_freight_line"/>

    <TextView
            android:id="@+id/tv_customer_card_number"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/card_number"
            android:textColor="@color/customerFields"
            android:textSize="@dimen/size_text_game_title"
            android:layout_marginTop="8dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_customer_payment_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
            android:id="@+id/tv_customer_card_type"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/card_type"
            android:textColor="@color/customerFieldsTitle"
            android:textSize="@dimen/app_font_size" android:layout_marginTop="2dp"
            android:paddingBottom="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="200dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_customer_card_number"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>