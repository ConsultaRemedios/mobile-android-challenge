<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="15dp"
    android:id="@+id/gameCard">

        <ImageView
            android:id="@+id/gameImage"
            android:layout_width="156dp"
            android:layout_height="156dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
    <!--        tools:srcCompat="@drawable/zelda_breath_of_the_wild_keyart" />-->

        <TextView
            android:id="@+id/gamePublisher"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nintendo"
            app:layout_constraintStart_toStartOf="@id/gameImage"
            app:layout_constraintTop_toBottomOf="@+id/gameImage" />

        <TextView
            android:id="@+id/gameTitle"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="The Legend Of Zelda Breath of The Wild"
            app:layout_constraintStart_toStartOf="@id/gameImage"
            app:layout_constraintTop_toBottomOf="@+id/gamePublisher" />

        <TextView
            android:id="@+id/gameOldPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="de R$350,00"
            app:layout_constraintStart_toStartOf="@id/gameImage"
            app:layout_constraintTop_toBottomOf="@+id/gameTitle" />

        <TextView
            android:id="@+id/gameNewPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="R$250,00"
            app:layout_constraintStart_toStartOf="@id/gameImage"
            app:layout_constraintTop_toBottomOf="@+id/gameOldPrice" />

</androidx.constraintlayout.widget.ConstraintLayout>