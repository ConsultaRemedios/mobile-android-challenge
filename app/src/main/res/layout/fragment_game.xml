<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:clickable="true"
    android:focusable="true">

    <ImageView
        android:id="@+id/loadingImageView"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:src="@drawable/loading"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/cardView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/scrollView2" />


    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fadeScrollbars="false"
        android:scrollbars="vertical"
        android:layout_marginBottom="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        card_view:layout_constraintBottom_toTopOf="@+id/card_upper_shadow">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="true"
                card_view:cardCornerRadius="0dp"
                card_view:cardElevation="1dp"
                card_view:cardUseCompatPadding="true">

                <com.denzcoskun.imageslider.ImageSlider
                    android:id="@+id/image_slider"
                    android:layout_width="180dp"
                    android:layout_height="180dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="35dp"
                    app:auto_cycle="true"
                    app:corner_radius="20"
                    app:delay="0"
                    app:error_image="@drawable/game_placeholder"
                    app:period="1000"
                    app:placeholder="@drawable/game_placeholder"
                    app:selected_dot="@drawable/selected_dot"
                    app:unselected_dot="@drawable/unselected_dot" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/game_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="18dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="18dp"
                android:fontFamily="@font/roboto"
                android:textColor="@color/colorGameName"
                android:textSize="24sp"
                tools:text="Super Mario Odyssey" />

            <TextView
                android:id="@+id/description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="18dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="18dp"
                android:fontFamily="@font/roboto"
                android:text="@string/lorem_ipsum"
                android:textColor="@color/colorGameDescription"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/read_more"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="18dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="18dp"
                android:fontFamily="@font/roboto_medium"
                android:text="@string/read_more"
                android:textColor="@color/colorBlue"
                android:textSize="16sp" />
        </LinearLayout>
    </ScrollView>

    <View
        android:id="@+id/card_upper_shadow"
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="@drawable/card_upper_shadow"
        app:layout_constraintBottom_toTopOf="@+id/cardView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="85dp"
        card_view:cardUseCompatPadding="true"
        card_view:cardElevation="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/price"
                android:layout_width="match_parent"
                android:layout_height="24dp"
                android:layout_marginTop="16dp"
                android:layout_marginStart="18dp"
                android:layout_marginEnd="18dp"
                android:fontFamily="@font/roboto_bold"
                android:textColor="@color/colorBlue"
                android:textSize="20sp"
                tools:text="R$ 197,88" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/delivery_image"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_below="@+id/price"
                android:layout_marginStart="16dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/ic_delivery" />

            <TextView
                android:id="@+id/delivery"
                android:layout_width="wrap_content"
                android:layout_height="19dp"
                android:layout_below="@+id/price"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_toEndOf="@+id/delivery_image"
                android:fontFamily="@font/roboto"
                android:text="@string/delivery_fare"
                android:textSize="16sp"
                android:textColor="@color/colorGreenText" />

            <TextView
                android:id="@+id/delivery_tax"
                android:layout_width="wrap_content"
                android:layout_height="19dp"
                android:layout_alignParentTop="true"
                android:layout_marginStart="4dp"
                android:layout_marginTop="48dp"
                android:layout_toEndOf="@+id/delivery"
                android:fontFamily="@font/roboto"
                android:textColor="@color/colorGreyText"
                android:textSize="16sp"
                tools:text="R$ 12,90" />

            <Button
                android:id="@+id/add_to_cart"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="19dp"
                android:layout_marginTop="25dp"
                android:layout_marginEnd="16dp"
                android:layout_toEndOf="@+id/delivery_tax"
                android:background="@drawable/round_button"
                android:fontFamily="@font/roboto_medium"
                android:paddingStart="12dp"
                android:paddingTop="10dp"
                android:paddingEnd="12dp"
                android:paddingBottom="10dp"
                android:text="@string/add_to_cart"
                android:textAllCaps="false"
                android:textColor="@color/colorWhite"
                android:textSize="14sp" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>