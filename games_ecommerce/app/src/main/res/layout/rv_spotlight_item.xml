<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:background="@color/bgColorPrimary">
    <androidx.cardview.widget.CardView
        android:id="@+id/cvGamePhoto"
        android:layout_width="@dimen/game_card_size"
        android:layout_height="@dimen/game_card_size"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:cardElevation="@dimen/game_card_elevation"
        app:cardCornerRadius="@dimen/game_card_radius"
        app:cardBackgroundColor="@color/white"
        android:layout_margin="10dp">
        <ImageView
            android:id="@+id/ivGame"
            android:layout_width="@dimen/game_card_size"
            android:layout_height="@dimen/game_card_size"
            android:adjustViewBounds="true"
            android:src="@drawable/placeholder"
            android:scaleType="centerCrop"/>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/cvGamePhoto"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="top|left"
        android:layout_margin="10dp">
        <TextView
            android:id="@+id/tvPublisher"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nintendo"
            android:textSize="@dimen/text_1"
            android:textColor="@color/white"
            />
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="The Legend Of Zelda Breath of The Wild"
            android:textSize="@dimen/text_2"
            android:textColor="@color/white"
            />
        <TextView
            android:id="@+id/tvPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="de R$350,00"
            android:textSize="@dimen/text_1"
            android:textColor="@color/white"
            />
        <TextView
            android:id="@+id/tvDiscount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="R$250,00"
            android:textSize="@dimen/text_3"
            android:textColor="@color/blue"
            />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>